# Denegar acceso a todos los archivos de log
Order Deny,Allow
Deny from all

# Proteger archivos de log específicos
<Files "*.log">
    Order Deny,Allow
    Deny from all
</Files>

# Proteger archivos de configuración
<Files "*.conf">
    Order Deny,Allow
    Deny from all
</Files>

# Evitar listado de directorios
Options -Indexes

# Proteger contra ataques de inclusión
<Files "*">
    <IfModule mod_php.c>
        php_flag engine off
    </IfModule>
</Files>