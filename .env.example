# Configuración de Base de Datos
DB_HOST=localhost
DB_USER=your_db_user
DB_PASS=your_db_password
DB_NAME=your_db_name

# Configuración de Sesión (en segundos)
SESSION_LIFETIME=3600
SESSION_COOKIE_LIFETIME=3600
SESSION_GC_MAXLIFETIME=3600

# Configuración de Seguridad
CSRF_TOKEN_EXPIRY=1800
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60
API_RATE_LIMIT=100
API_RATE_WINDOW=60

# Configuración de Archivos
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp
UPLOAD_PATH=uploads/productos/

# Configuración de Logs
LOG_LEVEL=ERROR
LOG_FILE=logs/security.log
ERROR_LOG_FILE=logs/error.log

# Dominios permitidos para CORS (separados por comas)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Configuración de Desarrollo
DEBUG_MODE=false
DISPLAY_ERRORS=false

# Configuración de Encriptación
ENCRYPTION_KEY=your-secret-encryption-key-here
HASH_ALGORITHM=sha256